pipeline{
    agent{
        label "j-slave"
    }
    stages{
        stage("Update Commit Status to Pending") {
            steps {
                echo "========Setting Portfolio Commit Status========"
                sh "sudo sh .cicd/preCodeReview/set_pending.sh"
            }
        }
        stage("Build"){
            steps {
                echo "========Building Portfolio========"
                sh "docker-compose build"
            }
            post{
                always{
                    echo "========cleanup========"
                    sh "docker system prune -a -f"
                }
                success{
                    echo "========Build executed successfully========"
                }
                failure{
                    echo "========Build execution failed========"
                }
            }
        }
    }
    post{
        success{
            echo "========Setting Portfolio Commit Status========"
            sh "sudo sh .cicd/preCodeReview/set_success.sh"
        }
        failure{
            echo "========Setting Portfolio Commit Status========"
            sh "sudo sh .cicd/preCodeReview/set_failure.sh"
        }
    }
}